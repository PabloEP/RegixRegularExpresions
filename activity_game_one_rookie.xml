<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manager.regularexpressiongame.GameOneRookie">

    <Button
        android:id="@+id/btn1"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="C+A"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="CA"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="R"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="R+S"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn3" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="R+S+T"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="C"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="A"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn2"
        app:layout_constraintLeft_toRightOf="@+id/btn6" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="R"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn3"
        app:layout_constraintLeft_toRightOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="S"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintLeft_toRightOf="@+id/btn8" />

    <Button
        android:id="@+id/btn10"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="T"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/btn5"
        app:layout_constraintLeft_toRightOf="@+id/btn9" />

    <EditText
        android:id="@+id/edtxtTexto"
        android:layout_width="392dp"
        android:layout_height="117dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />

    <RadioButton
        android:id="@+id/rbtn1"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtxtTexto" />

    <RadioButton
        android:id="@+id/rbtn2"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn1"
        app:layout_constraintTop_toBottomOf="@+id/edtxtTexto" />

    <RadioButton
        android:id="@+id/rbtn3"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn2"
        app:layout_constraintTop_toBottomOf="@+id/edtxtTexto" />

    <RadioButton
        android:id="@+id/rbtn4"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbtn1" />

    <RadioButton
        android:id="@+id/rbtn5"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn4"
        app:layout_constraintTop_toBottomOf="@+id/rbtn2" />

    <RadioButton
        android:id="@+id/rbtn6"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn5"
        app:layout_constraintTop_toBottomOf="@+id/rbtn3" />

    <RadioButton
        android:id="@+id/rbtn7"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rbtn4" />

    <RadioButton
        android:id="@+id/rbtn8"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn7"
        app:layout_constraintTop_toBottomOf="@+id/rbtn5" />

    <RadioButton
        android:id="@+id/rbtn9"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/rbtn8"
        app:layout_constraintTop_toBottomOf="@+id/rbtn6" />

</android.support.constraint.ConstraintLayout>
